{% extends 'base.html.twig' %}

{% block title %}Hello ReservationController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.table {
			border: 1px solid black;
			border-collapse: collapse;
			padding: 5px;
		}
	</style>

	<div class="example-wrapper">
		<h1 class="text-center">Liste des reservation</h1>
		<table class="table">
			<thead>
				<tr class="table">
					<th class="table">Nom</th>
					<th class="table">Type</th>
					<th class="table">Date</th>
					<th class="table">Lieux de l'événement</th>
					<th class="table">nb places</th>
					<th class="table">Reservation</th>
				</tr>
			</thead>
			<tbody>
				{% for reservation in reservations %}
					<tr class="table">
						<td class="table">{{ reservation.evenement.nom }}</td>
						<td class="table">{{ reservation.evenement.type }}</td>
						<td class="table">{{ reservation.evenement.date }}</td>
						<td class="table">{{ reservation.evenement.lieux }}</td>
						<td class="table">555</td>
						<td class="table">
							<a href="/reservation/{{reservation.id}}/delete">remove</a>
						</td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
